{% extends 'base.html.twig' %}

{% block title %}Teste: {{ test.name }}{% endblock %}

{% block breadcrumb %}
    <nav class="bg-gray-100 py-2">
        <div class="container mx-auto px-4">
            <ol class="list-none p-0 inline-flex">
                <li class="flex items">
                    <a href="{{ url('app_index') }}" class="text-blue-500">Home</a>
                    <span class="mx-2">/</span>
                </li>
                <li class="flex items">
                    <a href="{{ url('app_subject_show', {'id': test.module.subject.id}) }}"
                       class="text-blue-500">{{ test.module.subject.name }}</a>
                    <span class="mx-2">/</span>
                <li class="flex items">
                    <a href="{{ url('app_module_show', {'id': test.module.id}) }}"
                       class="text-blue-500">{{ test.module.name }}</a>
                    <span class="mx-2">/</span>
                </li>
                <li class="flex items">
                    <span class="text-gray-500">{{ test.name }}</span>
                </li>
            </ol>
        </div>
    </nav>
{% endblock %}

{% block body %}
    {% form_theme formTest with ['tailwind_2_layout.html.twig', 'form/fba_theme.html.twig'] %}
    <main class="flex-grow container mx-auto my-8 p-4">

        <div class="bg-white shadow-md rounded-lg p-6 mb-6 space-y-4">
            <h3 class="text-xl font-bold text-gray-800">
                {{ test.name }}
            </h3>
        </div>

        {{ form_start(formTest, {'attr': {'novalidate': 'novalidate'}}) }}

        {% for question in formTest %}
            {{ form_row(question) }}
        {% endfor %}
        <button
            type="submit"
            class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition duration-300"
        >
            Enviar
        </button>

        {{ form_end(formTest) }}
    </main>
{% endblock %}
