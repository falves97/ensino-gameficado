{% extends 'base.html.twig' %}

{% block title %}Área do Estudadnte{% endblock %}

{% block body %}
    <main class="flex-grow container mx-auto my-8 p-4">

        <h2 class="text-2xl font-semibold mb-6">Suas Disciplinas</h2>

        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
            {% for subject in app.user.subjects %}
                <article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-xl font-semibold">{{ subject.name }}</h3>
                        {#                                @to-do Add emblemas #}
                        {#                                <img src="C:\Users\Francyane\Pictures\emblema3.png" alt="Iniciante Explorador" #}
                        {#                                     class="w-24 h-26 rounded-full" title="Iniciante Explorador"> #}
                    </div>
                    <p class="text-gray-600 mb-4">{{ subject.description }}</p>
                    <div class="flex justify-between items-center">
                                <span class="text-sm text-blue-600">
                                    Progresso: {{ subject.progress }}%
                                </span>
                        <a
                            href="{{ path('app_subject_show', {'id': subject.id}) }}"
                            class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition duration-300">
                            {% if subject.progress > 0 %}
                                Continuar
                            {% else %}
                                Começar
                            {% endif %}
                        </a>
                    </div>
                </article>
            {% endfor %}
        </section>

        <h2 class="text-2xl font-semibold mb-6">Disciplinas Disponíveis</h2>

        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for subject in allowedSubjects %}
                <article
                    class="flex flex-wrap content-between bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div>
                        <div class="flex justify-between items-start mb-4">
                            <h3 class="text-xl font-semibold">{{ subject.name }}</h3>
                            {#                                @to-do Add emblemas #}
                            {#                                <img src="C:\Users\Francyane\Pictures\emblema3.png" alt="Iniciante Explorador" #}
                            {#                                     class="w-24 h-26 rounded-full" title="Iniciante Explorador"> #}
                        </div>
                        <p class="text-gray-600 mb-4">{{ subject.description }}</p>
                    </div>
                    <div class="flex justify-between items-center w-full">
                        <a href="{{ path('app_subject_show', {'id': subject.id}) }}"
                           class="bg-gray-200 px-4 py-2 rounded hover:bg-gray-300 transition duration-300">
                            Detalhes
                        </a>
                        <a
                            href="{{ path('app_subject_enroll', {'id': subject.id}) }}"
                            class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition duration-300">
                            Matricular-se!
                        </a>
                    </div>
                </article>
            {% endfor %}
        </section>
    </main>

{% endblock %}
